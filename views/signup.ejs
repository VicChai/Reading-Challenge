<%- include('partials/header') -%>
<main class="container">
  <div class="row justify-content-center">
    <section class="col-6 mt-5">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/signup" method="POST">
        <div class="mb-3">
          <label for="userName" class="form-label ml-5">User Name</label>
          <input
            type="text"
            class="form-control ml-12 border-slate-200 placeholder-slate-400 contrast-more:border-slate-400 contrast-more:placeholder-slate-500 bg-zinc-200 flex-row pl-2"
            id="userName"
            name="userName"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label text-xl ml-5"
            >Email address</label
          >
          <input
            type="email"
            class="form-control ml-12 border-slate-200 placeholder-slate-400 contrast-more:border-slate-400 contrast-more:placeholder-slate-500 bg-zinc-200 flex-row pl-2"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
          <div id="emailHelp" class="form-text text-sm italic ml-5">
            We'll never share your email with anyone else.
          </div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label ml-5">Password</label>
          <input
            type="password"
            class="form-control ml-12 border-slate-200 placeholder-slate-400 contrast-more:border-slate-400 contrast-more:placeholder-slate-500 bg-zinc-200 flex-row pl-2"
            id="password"
            name="password"
          />
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="form-label ml-5"
            >Confirm Password</label
          >
          <input
            type="password"
            class="form-control ml-12 border-slate-200 placeholder-slate-400 contrast-more:border-slate-400 contrast-more:placeholder-slate-500 bg-zinc-200 flex-row pl-2"
            id="confirmPassword"
            name="confirmPassword"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary ml-5 btn btn-primary bg-slate-900 hover:bg-sky-700 rounded px-3 text-white"
        >
          Submit
        </button>
      </form>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
