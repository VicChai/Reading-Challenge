<%- include('partials/header') -%>

<div class="mt-5">
  <h2>Make an edit</h2>
  <form
    action="/post/editPost/<%= post.id %>"
    method="POST"
    enctype="multipart/form-data"
  >
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        value="<%=post.title %>"
      />
    </div>
    <div class="mb-3">
      <label for="sharing" class="form-label">Sharing</label>
      <textarea class="form-control" id="sharing" name="sharing">
<%=post.sharing %></textarea
      >
    </div>
    <div class="mb-3">
      <label for="imgUpload" class="form-label">Image</label>
      <input
        type="file"
        class="form-control"
        id="imageUpload"
        name="file"
        value="<%=post.image %>"
      />
    </div>
    <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
  </form>
</div>

<%- include('partials/footer') -%>
